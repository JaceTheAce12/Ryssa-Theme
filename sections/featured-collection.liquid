{%- comment -%}
  ----------------------------------------------------------------------------------
  RYSSA FEATURED SECTION (Standard Flow)
  - Layout: Natural height based on content (Grid + Padding)
  - No height hacks or fixed sizing
  - Content pushes the section open naturally
  - Fix: Removed invalid Liquid filter syntax inside image_tag
  ----------------------------------------------------------------------------------
{%- endcomment -%}

<style>
  /* Map Schema Settings */
  [data-section-id="{{ section.id }}"] {
    --color-bg: {{ section.settings.bg_color }};
    --color-text: {{ section.settings.text_color }};
    --color-heading: {{ section.settings.heading_color }};
    --color-accent: {{ section.settings.accent_color }};
  }
  
  /* Dynamic Watermark Content */
  [data-section-id="{{ section.id }}"] .featured-section__watermark {
    content: '{{ section.settings.watermark_text | default: 'RYSSA' }}';
  }
</style>

<section class="featured-section section" data-section-id="{{ section.id }}">
  
  <div class="featured-section__bg-layer">
    <div class="featured-section__watermark" aria-hidden="true">{{ section.settings.watermark_text | default: 'RYSSA' }}</div>
    <div class="featured-section__gradient"></div>
  </div>

  <div class="container">
    
    <header class="section-header fade-in">
      {%- if section.settings.eyebrow != blank -%}
        <span class="eyebrow">{{ section.settings.eyebrow }}</span>
      {%- endif -%}
      {%- if section.settings.title != blank -%}
        <h2 class="section-title">{{ section.settings.title }}</h2>
      {%- endif -%}
    </header>

    <div class="product-grid__items">
      {%- assign collection = section.settings.collection -%}
      {%- assign limit = section.settings.products_to_show -%}

      {%- if collection != blank and collection.products_count > 0 -%}
        {%- for product in collection.products limit: limit -%}
          <article class="product-card fade-in">
            <a href="{{ product.url }}" class="product-card__link">
              <div class="product-card__image-wrapper">
                {%- if product.featured_media -%}
                  {{ product.featured_media | image_url: width: 800 | image_tag: 
                    loading: 'lazy',
                    width: product.featured_media.width,
                    height: product.featured_media.height,
                    alt: product.title,
                    class: 'product-card__img'
                  }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'product-card__img placeholder-svg' }}
                {%- endif -%}
              </div>
              <div class="product-card__info">
                <h3 class="product-card__title">{{ product.title }}</h3>
                <p class="product-card__price">{{ product.price | money }}</p>
              </div>
            </a>
          </article>
        {%- endfor -%}
      
      {%- else -%}
        {%- comment -%} EMPTY STATE (Onboarding) {%- endcomment -%}
        {%- for i in (1..limit) -%}
          <article class="product-card fade-in">
            <a href="#" class="product-card__link">
              <div class="product-card__image-wrapper">
                {%- capture placeholder_index -%}{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
                {{ 'product-' | append: placeholder_index | placeholder_svg_tag: 'product-card__img placeholder-svg' }}
              </div>
              <div class="product-card__info">
                <h3 class="product-card__title">Editor's Pick {{ i }}</h3>
                <p class="product-card__price">{{ 16500 | money }}</p>
              </div>
            </a>
          </article>
        {%- endfor -%}
      {%- endif -%}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Featured Editor's Picks",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Curated Selection"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Editor's Picks"
    },
    {
      "type": "text",
      "id": "watermark_text",
      "label": "Background Watermark Text",
      "default": "RYSSA"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 3,
      "label": "Products to show"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#FDF5F3"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent",
      "default": "#CBB674"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading",
      "default": "#351E28"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Product Text",
      "default": "#1A1A1A"
    }
  ],
  "presets": [
    {
      "name": "Featured Editor's Picks"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  /* ========================================
     FEATURED SECTION STYLES (Standard Block Flow)
     ======================================== */

  .featured-section {
    /* Fallbacks */
    --color-blush: #FDF5F3;
    --color-plum: #351E28;
    --color-gold: #CBB674;
    --font-editorial: 'Bodoni Moda', 'Didot', serif;
    
    background-color: var(--color-bg);
    position: relative;
    width: 100%;
    
    /* STANDARD PADDING: This ensures space around content */
    padding: 100px 24px; 
    
    /* NO HEIGHT HACKS: Let content dictate size */
    height: auto;
    display: block;
  }

  /* Separate Background Layer for Decorations 
     This clips the watermark so it doesn't spill out, 
     but leaves the main section visible. */
  .featured-section__bg-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
    z-index: 0;
  }

  /* Decorative Watermark */
  .featured-section__watermark {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: var(--font-editorial);
    font-size: clamp(8rem, 15vw, 15rem);
    font-weight: 300;
    color: rgba(0, 0, 0, 0.02);
    letter-spacing: 0.1em;
    user-select: none;
    white-space: nowrap;
    z-index: 0;
    pointer-events: none;
  }

  /* Decorative Gradient */
  .featured-section__gradient {
    position: absolute;
    top: 0;
    right: 0;
    width: 300px;
    height: 300px;
    background: radial-gradient(
      circle,
      rgba(232, 196, 196, 0.3) 0%,
      transparent 70%
    );
    pointer-events: none;
    z-index: 0;
  }

  .featured-section .container {
    position: relative;
    z-index: 1; /* Place content above background */
    max-width: 1440px;
    margin: 0 auto;
    width: 100%;
  }

  .featured-section .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .featured-section .eyebrow {
    display: block;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-accent);
    margin-bottom: 16px;
  }

  .featured-section .section-title {
    font-family: var(--font-editorial);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 400;
    color: var(--color-heading);
    margin: 0;
  }

  /* PRODUCT GRID (Standard Grid Layout) */
  .product-grid__items {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 40px;
    width: 100%;
    /* Ensure the grid takes up real space */
    position: relative;
  }

  /* Product Card */
  .product-card {
    display: block;
    width: 100%;
    /* Ensure card has height */
    position: relative;
  }

  .product-card__link {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.3s ease;
  }

  .product-card:hover .product-card__link {
    transform: translateY(-5px);
  }

  /* Image Wrapper */
  .product-card__image-wrapper {
    width: 100%;
    /* Force Aspect Ratio 3:4 */
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background-color: #F8F6F3;
    margin-bottom: 24px;
    position: relative;
  }

  /* The actual image */
  .product-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .product-card:hover .product-card__img {
    transform: scale(1.03);
  }

  /* SVG Placeholder styling */
  .product-card__img.placeholder-svg {
    background: #e0e0e0;
    position: absolute;
    top: 0;
    left: 0;
  }

  .product-card__info {
    text-align: center;
  }

  .product-card__title {
    font-family: var(--font-editorial);
    font-size: 1.25rem;
    font-weight: 400;
    margin: 0 0 8px 0;
    color: var(--color-text);
  }

  .product-card__price {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text);
    opacity: 0.7;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .featured-section {
      padding: 60px 24px;
    }
    .product-grid__items {
      grid-template-columns: 1fr;
      gap: 32px;
    }
  }
{% endstylesheet %}

