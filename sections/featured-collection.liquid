{%- comment -%}
  ----------------------------------------------------------------------------------
  RYSSA FEATURED SECTION (Standard Flow)
  - Fixed: Renamed collection variable to avoid conflicts
  - Fixed: Logic now falls back to placeholders if the selected collection has no visible products
  ----------------------------------------------------------------------------------
{%- endcomment -%}

<style>
  /* Map Schema Settings */
  [data-section-id="{{ section.id }}"] {
    --color-bg: {{ section.settings.bg_color }};
    --color-text: {{ section.settings.text_color }};
    --color-heading: {{ section.settings.heading_color }};
    --color-accent: {{ section.settings.accent_color }};
  }
  
  /* Dynamic Watermark Content */
  [data-section-id="{{ section.id }}"] .featured-section__watermark {
    content: '{{ section.settings.watermark_text | default: 'RYSSA' }}';
  }

  /* FORCE VISIBILITY: Ensures content is visible even if JS fails */
  [data-section-id="{{ section.id }}"] .fade-in {
    opacity: 1 !important;
    transform: none !important;
    visibility: visible !important;
  }
</style>

<section class="featured-section section" data-section-id="{{ section.id }}">
  
  <div class="featured-section__bg-layer">
    <div class="featured-section__watermark" aria-hidden="true">{{ section.settings.watermark_text | default: 'RYSSA' }}</div>
    <div class="featured-section__gradient"></div>
  </div>

  <div class="container">
    
    <header class="section-header fade-in">
      {%- if section.settings.eyebrow != blank -%}
        <span class="eyebrow">{{ section.settings.eyebrow }}</span>
      {%- endif -%}
      {%- if section.settings.title != blank -%}
        <h2 class="section-title">{{ section.settings.title }}</h2>
      {%- endif -%}
    </header>

    <div class="product-grid__items">
      {%- assign target_collection = section.settings.collection -%}
      {%- assign limit = section.settings.products_to_show -%}

      {%- comment -%} 
        LOGIC CHECK: 
        1. Check if collection is selected 
        2. Check if collection has products 
      {%- endcomment -%}
      
      {%- if target_collection != blank and target_collection.products.size > 0 -%}
        
        {%- for product in target_collection.products limit: limit -%}
          <article class="product-card fade-in">
            <a href="{{ product.url }}" class="product-card__link">
              <div class="product-card__image-wrapper">
                {%- if product.featured_media -%}
                  {{ product.featured_media | image_url: width: 800 | image_tag: 
                    loading: 'lazy',
                    width: product.featured_media.width,
                    height: product.featured_media.height,
                    alt: product.title,
                    class: 'product-card__img'
                  }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'product-card__img placeholder-svg' }}
                {%- endif -%}
              </div>
              <div class="product-card__info">
                <h3 class="product-card__title">{{ product.title }}</h3>
                <p class="product-card__price">{{ product.price | money }}</p>
              </div>
            </a>
          </article>
        {%- endfor -%}
      
      {%- else -%}
        
        {%- comment -%} FALLBACK / EMPTY STATE (Shows if collection is blank OR empty) {%- endcomment -%}
        {%- for i in (1..limit) -%}
          <article class="product-card fade-in">
            <a href="#" class="product-card__link">
              <div class="product-card__image-wrapper">
                {%- capture placeholder_index -%}{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
                {{ 'product-' | append: placeholder_index | placeholder_svg_tag: 'product-card__img placeholder-svg' }}
              </div>
              <div class="product-card__info">
                <h3 class="product-card__title">Editor's Pick {{ i }}</h3>
                <p class="product-card__price">{{ 16500 | money }}</p>
              </div>
            </a>
          </article>
        {%- endfor -%}
        
      {%- endif -%}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Featured Editor's Picks",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Curated Selection"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Editor's Picks"
    },
    {
      "type": "text",
      "id": "watermark_text",
      "label": "Background Watermark Text",
      "default": "RYSSA"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 3,
      "label": "Products to show"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#FDF5F3"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent",
      "default": "#CBB674"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading",
      "default": "#351E28"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Product Text",
      "default": "#1A1A1A"
    }
  ],
  "presets": [
    {
      "name": "Featured Editor's Picks"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  /* ========================================
     FEATURED SECTION STYLES
     ======================================== */

  .featured-section {
    /* Variables */
    --color-blush: #FDF5F3;
    --color-plum: #351E28;
    --color-gold: #CBB674;
    --font-editorial: 'Bodoni Moda', 'Didot', serif;
    --spacing-section: clamp(80px, 10vw, 120px);
    --spacing-grid: clamp(32px, 4vw, 48px);

    background-color: var(--color-bg);
    position: relative;
    width: 100%;
    /* Standard Padding */
    padding: var(--spacing-section) 24px;
    height: auto;
    display: block;
    isolation: isolate;
  }

  /* Background Layer */
  .featured-section__bg-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
    z-index: 0;
  }

  /* Watermark */
  .featured-section__watermark {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotate(-3deg);
    font-family: var(--font-editorial);
    font-size: clamp(10rem, 18vw, 20rem);
    font-weight: 300;
    font-style: italic;
    color: rgba(0, 0, 0, 0.025);
    letter-spacing: 0.12em;
    user-select: none;
    white-space: nowrap;
    z-index: 0;
  }

  /* Gradient */
  .featured-section__gradient {
    position: absolute;
    top: -50px;
    right: -50px;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle at center, rgba(203, 182, 116, 0.08) 0%, transparent 75%);
    pointer-events: none;
    z-index: 0;
    border-radius: 50%;
    filter: blur(40px);
  }

  /* Container */
  .featured-section .container {
    position: relative;
    z-index: 1;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  /* Header */
  .featured-section .section-header {
    text-align: center;
    margin-bottom: clamp(60px, 8vw, 80px);
  }

  .featured-section .eyebrow {
    display: block;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-accent);
    margin-bottom: 20px;
  }

  .featured-section .section-title {
    font-family: var(--font-editorial);
    font-size: clamp(2.75rem, 6vw, 4.5rem);
    font-weight: 400;
    font-style: italic;
    color: var(--color-heading);
    margin: 0;
    line-height: 1.1;
  }

  /* Product Grid */
  .product-grid__items {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-grid);
    width: 100%;
    position: relative;
  }

  /* Product Card */
  .product-card {
    display: block;
    width: 100%;
    position: relative;
    background: rgba(255, 255, 255, 0.4);
    border-radius: 2px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .product-card:hover {
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
    transform: translateY(-8px);
  }

  .product-card__link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  /* Image */
  .product-card__image-wrapper {
    width: 100%;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background: #F8F6F3;
    position: relative;
  }

  .product-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .product-card:hover .product-card__img {
    transform: scale(1.05);
  }

  .product-card__img.placeholder-svg {
    background: #e8e8e8;
    position: absolute;
    top: 0; left: 0;
  }

  /* Info */
  .product-card__info {
    text-align: center;
    padding: 28px 20px 32px;
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(10px);
  }

  .product-card__title {
    font-family: var(--font-editorial);
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    font-weight: 400;
    margin: 0 0 12px 0;
    color: var(--color-text);
  }

  .product-card__price {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-text);
    opacity: 0.75;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .featured-section { padding: 60px 20px; }
    .product-grid__items { grid-template-columns: 1fr; gap: 28px; }
  }
{% endstylesheet %}

